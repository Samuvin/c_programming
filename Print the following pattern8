#include<stdio.h>
int main()
{
    int num;
    scanf("%d",&num);
    for(int i=1;i<=num;i++)
    {
        for(int j=num;j>=1;j--)
        {
            if(j!=i)
            {
                printf("%d",j);
            }
            else
            {
                printf("*");
            }
            
        }
        printf("\n");
    }
}
