#include <stdio.h>
int main()
{
    int num,end;
    scanf("%d",&num);
        for(int i=1;i<(2*num)-(num-1);i++)
        {
            for(int j=1;j<=(2*num)-i;j++)
            {
                {
                    if(i<=num)
                    printf("%d",i);
                }
            }
            printf("\n");
        }
        for(int k=num-1;k>=1;k--)
        {
            for(int l=k;l>=1;l--)
            {
                printf("%d",k);
            }
            printf("\n");
        }
}
